<Page x:Class="MvvmEditorWizard.Views.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmEditorWizard"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="{x:Static local:Strings.Wizard_Title}" >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>
    <TextBlock FontSize="25" Margin="10" Text="{x:Static local:Strings.Wizard_Title}" />
    <TextBlock Margin="10" Grid.Row="1" Text="{x:Static local:Strings.Wizard_WelcomePage_Text}" TextWrapping="WrapWithOverflow" />
  </Grid>
</Page>
